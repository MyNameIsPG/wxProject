<view class="listContainer">
  <view class="bannerContainer">
    <image src="../image/banner1.jpg"></image>
  </view>
  <view>
    <scroll-view scroll-x="true" class="tab-h" scroll-left="{{scrollLeft}}">
      <view
        class="tab-item {{currentTab==0?'active':''}}"
        data-current="0"
        bindtap="swichNav"
      >团队简介</view>

.tab-h {
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #fff;
    font-size: 16px;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
    border-bottom: 1px solid #cccccc;
}

.tab-item {
    display: inline-block;
    width: 25%;
    text-align: center;
    color: #333333;
    font-size: 15px;
    font-weight: 600;
}

.tab-item.active {
    color: #e3393c;
    position: relative;
}

.tab-item.active:after {
    content: "";
    display: block;
    height: 8rpx;
    width: 52px;
    background: #e3393c;
    position: absolute;
    bottom: 0;
    left: 50%;
    border-radius: 16rpx;
    margin-left: -26px;
}

.item-ans {
    width: 100%;
    padding: 0rpx 30rpx;
    box-sizing: border-box;
    align-items: center;
    overflow: hidden;
}

.item-ans-contern {
    overflow: hidden;
    padding: 20rpx 0rpx;
    border-bottom: 1px solid #cccccc;
}

.avatar {
    width: 120px;
    height: 90px;
    position: relative;
    padding-right: 10px;
    border-radius: 10rpx;
    overflow: hidden;
    float: left;
}

.avatar .img {
    width: 100%;
    height: 100%;
    border-radius: 12rpx;
}

.avatar .doyen {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    bottom: -2px;
    right: 20rpx;
}

.expertInfo {
    font-size: 12px;
    flex-grow: 2;
    color: #666666;
    line-height: 1.5em;
}

.tag, .answerHistory {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.expertInfo .name {
    font-size: 16px;
    color: #000;
    margin-bottom: 14px;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
    max-height: 36px;
}

.expertInfo image {
    width: 20rpx;
    height: 20rpx;
}


.tab-content {
    margin-top: 80rpx;
    background: #fff;
}

.scoll-h {
    height: 100%;
}

.tabbar4 {
    padding-left: 130px;
    color: #e3393c;
    font-size: 12px;
    margin-top: 5px;
}

.tabbar2 {
    text-align: right;
    border-bottom: 5px solid #eeeeee;
    padding: 10px 0;
    padding-right: 15px;
}
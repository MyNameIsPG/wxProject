/* pages/list/list.wxss */
.listContainer {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.bannerContainer {
  width: 100%;
  height: 210px;
}

.bannerContainer image {
  width: 100%;
  height: 100%;
}

.tab-h {
  height: 45px;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 45px;
  background: #ffffff;
  font-size: 16px;
  white-space: nowrap;
  border-bottom: 1px solid #cccccc;
}

.tab-item {
  display: inline-block;
  width: 33.33%;
  text-align: center;
  color: #000;
  font-weight: bold;
  font-size: 14px;
}

.tab-item.active {
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 4px;
  width: 30%;
  background: #e3393c;
  position: absolute;
  bottom: 0;
  left: 50%;
  border-radius: 16rpx;
  margin-left: -15%;
}

.scoll-h {
  height: 100%;
  background: #fff;
  
}

.tabBox1 {
  padding: 10px 15px;
  border-bottom: 20rpx solid #eeeeee;
}

.tabBox1 p {
  display: block;
  color: #333333;
  font-size: 28rpx;
}

.tabBox1 p span {
  color: #666666;
}


.listBox {
    border-bottom: 20rpx solid #eeeeee;
    background: #fff;
    padding: 20rpx 30rpx;
}

.listBox-hade {
    border-bottom: 1px solid #cccccc;
    padding-bottom: 20rpx;
}

.listBox-hade text {
    border-left: 6rpx solid #e33939;
    color: #333333;
    font-weight: 600;
    font-size: 30rpx;
    padding-left: 15rpx;
}

.listBox-body {
    padding: 15rpx 0 0;
    overflow: hidden;
}

.listBox-body .text {
    color: #333333;
    font-size: 28rpx;
    line-height: 40rpx;
    text-indent: 2em;
}

.btnBox {
    position: fixed;
    width: 100%;
    left: 0px;
    bottom: 0px;
    background: #fff;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
}

.btnBox text {
    color: #fff;
    font-size: 36rpx;
    width: 48%;
    display: inline-block;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: #27ccaa;
    box-sizing: border-box;
    border-radius: 40rpx;
    float: left;
    margin-right: 4%;
}

.btnBox text:last-child {
    margin-right: 0px;
}

.addView {
    background: #43aaff;
}
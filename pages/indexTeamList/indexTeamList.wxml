            </swiper-item>
            <swiper-item>
                <scroll-view scroll-y="true" class="scoll-h">
                    1113
                </scroll-view>
            </swiper-item>
        </swiper>
    </view>
    <view class="btnBox">
        <text bindtap="clickAddBtn" class="addView">预约服务</text>
        <text bindtap="clickAddBtn">立即报名</text>
    </view>
</view>